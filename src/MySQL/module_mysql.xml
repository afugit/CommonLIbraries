<?xml version="1.0" encoding="UTF-8"?>
<project name="module_mysql" default="compile.module.mysql">
  <dirname property="module.mysql.basedir" file="${ant.file.module_mysql}"/>
  
  <property name="module.jdk.home.mysql" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.mysql" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.mysql" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.mysql" value="-encoding UTF-8 -source 9 -target 9 ${compiler.args}"/>
  
  <property name="mysql.output.dir" value="${module.mysql.basedir}/../../out/production/MySQL"/>
  <property name="mysql.testoutput.dir" value="${module.mysql.basedir}/../../out/test/MySQL"/>
  
  <path id="mysql.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="mysql.module.production.classpath">
    <path refid="${module.jdk.classpath.mysql}"/>
  </path>
  
  <path id="mysql.runtime.production.module.classpath">
    <pathelement location="${mysql.output.dir}"/>
  </path>
  
  <path id="mysql.module.classpath">
    <path refid="${module.jdk.classpath.mysql}"/>
    <pathelement location="${mysql.output.dir}"/>
  </path>
  
  <path id="mysql.runtime.module.classpath">
    <pathelement location="${mysql.testoutput.dir}"/>
    <pathelement location="${mysql.output.dir}"/>
  </path>
  
  
  <patternset id="excluded.from.module.mysql">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.mysql">
    <patternset refid="excluded.from.module.mysql"/>
  </patternset>
  
  <path id="mysql.module.sourcepath">
    <dirset dir="${module.mysql.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.mysql" depends="compile.module.mysql.production,compile.module.mysql.tests" description="Compile module MySQL"/>
  
  <target name="compile.module.mysql.production" depends="register.custom.compilers" description="Compile module MySQL; production classes">
    <mkdir dir="${mysql.output.dir}"/>
    <javac2 destdir="${mysql.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.mysql}/javac">
      <compilerarg line="${compiler.args.mysql}"/>
      <bootclasspath refid="mysql.module.bootclasspath"/>
      <classpath refid="mysql.module.production.classpath"/>
      <src refid="mysql.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.mysql"/>
    </javac2>
    
    <copy todir="${mysql.output.dir}">
      <fileset dir="${module.mysql.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.mysql.tests" depends="register.custom.compilers,compile.module.mysql.production" description="compile module MySQL; test classes" unless="skip.tests"/>
  
  <target name="clean.module.mysql" description="cleanup module">
    <delete dir="${mysql.output.dir}"/>
    <delete dir="${mysql.testoutput.dir}"/>
  </target>
</project>